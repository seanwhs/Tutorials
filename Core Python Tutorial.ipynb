  {"cell_type": "code", "metadata": {}, "source": ["def greet(name:str)->str:\n    return f'Hello, {name}'\n\nprint(greet('Alice'))"]},

  {"cell_type": "code", "metadata": {}, "source": ["def summarize(*args, **kwargs):\n    print('Positional args:', args)\n    print('Keyword args:', kwargs)\n\nsummarize(1,2,3,name='Alice',age=30)"]},

  {"cell_type": "code", "metadata": {}, "source": ["def factorial(n:int)->int:\n    if n==0:\n        return 1\n    return n * factorial(n-1)\n\nprint('Factorial of 5:', factorial(5))"]},

  {"cell_type": "markdown", "metadata": {}, "source": ["## 5. Functional Programming"]},

  {"cell_type": "code", "metadata": {}, "source": ["def apply_fn(fn,value):\n    return fn(value)\n\nprint('Square of 5:', apply_fn(lambda x:x**2,5))"]},

